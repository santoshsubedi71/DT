    <body>
      <section class="position-relative">
        <div class="card my-5 mx-auto p-2 text-center" style="width: 600px;">
          <div class="card-body mx-auto">
            <h1 class="text-center my-3">Resigater user</h1>
            <form action="regist.php" method="POST">
              <div class="mb-3 row"><label for="username" class="col-sm-4 col-form-label text-end">User name:</label>
                <div class="col-sm-8"><input type="text" class="form-control" value="" id="username" name="username">
                  <p> {% if errArr.username | length > 0 %} <br><span class="red">{{ errArr.username}}</span>{% endif %}</p>
                </div>
              </div>
              <div class="mb-3 row"><label for="email" class="col-sm-4 col-form-label text-end">Email Address:</label>
                <div class="col-sm-8"><input type="email" class="form-control" value="" id="email" name="email">
                  <p> {% if errArr.email | length > 0 %}<br><span class="red">{{errArr.email}}</span>{% endif %}</p>
                  <p> {% if errArr.error_message | length > 0 %}<br><span class="red">{{errArr.error_message}}</span>{% endif %}</p>
                </div>
              </div>
              <div class="mb-3 row"><label for="password" class="col-sm-4 col-form-label text-end">Password:</label>
                <div class="col-sm-8"><input type="password" value="" class="form-control" id="password" name="password" autocomplete="current-password">
                  <p> {% if errArr.password | length > 0 %}<br><span class="red">{{errArr.password}}</span>{% endif %} </p>
                </div>
              </div>
              <div class="mb-3 row"><label for="" class="col-sm-4 col-form-label text-end">Phone no:</label>
                <div class="col-sm-2"><input type="text" class="form-control" id="tel1" name="tel1" value="" maxlength="3"></div>
                <div class="col-sm-3"><input type="text" class="form-control" id="tel2" name="tel2" value="" maxlength="4"></div>
                <div class="col-sm-3"><input type="text" class="form-control" id="tel3" name="tel3" value="" maxlength="4"></div> {% if errArr.tel1 | length > 0 %}<br><span class="red">{{errArr.tel1}}</span>{% endif %} {% if errArr.tel2 | length > 0 %}<br><span class="red">{{errArr.tel2}}</span>{% endif %} {% if errArr.tel3 | length > 0 %}<br><span class="red">{{errArr.tel3}}</span>{% endif %}
              </div>
              <div class="mb-3 row"><label class="col-sm-4 col-form-label text-end">Postal Code:</label>
                <div class="col-sm-3"><input type="text" class="form-control" id="zip1" value="" name="zip1" maxlength="3"></div>
                <div class="col-sm-3"><input type="text" class="form-control" id="zip2" value="" name="zip2" maxlength="4"></div>
                <div class="col-sm-2"><button class="btn btn-outline-secondary" type="button" id="searchPostalCode">Find</button></div>
                <p> {% if errArr.zip1  | length > 0 %}<br><span class="red">{{errArr.zip1}}</span>{% endif %} {% if errArr.zip2  | length > 0 %}<br><span class="red">{{errArr.zip2}}</span>{% endif %} </p>
              </div>
              <div class="mb-3 row"><label for="address" class="col-sm-4 col-form-label text-end">Address:</label>
                <div class="col-sm-8"><input type="text" class="form-control" id="address" name="address"></div>
                <p> {% if errArr.address | length > 0 %}<br><span class="red">{{errArr.address}}</span>{% endif %}</p>
              </div>
              <div class="row">
                <div class="col-sm-4"></div>
                <div class="col-sm-6 "><input type="submit" class="btn btn-primary my-2" name="submit" value="Sign Up">
                  <p>If you already registred please, <a href="{{constant('namche\\Bootstrap::APP_URL')}}namche/login.php">LOGIN </a>here!</p>
                </div>
              </div>
            </form>
          </div>
        </div>
      </section>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
      <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
      <script>
        $(document).ready(function() {
          $("#searchPostalCode").click(function() {
            $.get("./registration/postcode_search.php?zip1=" + $("#zip1").val() + "&zip2=" + $("#zip2").val(), function(data) {
              if (data) $("#address").val(data);
            });
          });
        })
      </script>
    </body>
